# ═══════════════════════════════════════════
# 🔥 FIREBASE CONFIGURATION
# ═══════════════════════════════════════════
FIREBASE_URL=https://your-project.firebaseio.com
FIREBASE_KEY=your-firebase-database-secret-key

# ═══════════════════════════════════════════
# 🔐 ADMIN CREDENTIALS (غيّرها فوراً!)
# ═══════════════════════════════════════════
ADMIN_USERNAME=admin
ADMIN_PASSWORD=YourStrongPassword123!@#

# ═══════════════════════════════════════════
# 🔑 API KEYS
# ═══════════════════════════════════════════
APP_API_KEY=MySecureAppKey@2024#Firebase$
ADMIN_API_KEY=SuperSecretAdminKey_2024

# ═══════════════════════════════════════════
# 🌐 CORS & ORIGINS
# ═══════════════════════════════════════════
# للسماح لجميع النطاقات: ALLOWED_ORIGINS=*
# للسماح لنطاقات محددة: ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=*

# ═══════════════════════════════════════════
# 🛡️ IP FILTERING
# ═══════════════════════════════════════════
# قائمة سوداء - IPs محظورة
# مثال: IP_BLACKLIST=192.168.1.100,10.0.0.50
IP_BLACKLIST=

# قائمة بيضاء - فقط هذه IPs مسموح لها
# مثال: IP_WHITELIST=192.168.1.10,203.0.113.5
# اتركها فارغة للسماح للجميع
IP_WHITELIST=

# ═══════════════════════════════════════════
# 🗄️ REDIS (اختياري - للحماية من Brute Force)
# ═══════════════════════════════════════════
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379

# ═══════════════════════════════════════════
# 🚀 SERVER CONFIGURATION
# ═══════════════════════════════════════════
PORT=10000
NODE_ENV=production

# ═══════════════════════════════════════════
# 📝 SECURITY NOTES
# ═══════════════════════════════════════════
# 1.  ADMIN_PASSWORD فوراً - استخدم كلمة مرور قوية
# 2.  APP_API_KEY و ADMIN_API_KEY
# 3. في الإنتاج، استخدم HTTPS دائماً
# 4. فعّل IP_WHITELIST للحماية القصوى
# 5. استخدم Redis للأداء الأفضل مع Brute Force Protection
# 6. راجع السجلات بانتظام للكشف عن الأنشطة المشبوهة